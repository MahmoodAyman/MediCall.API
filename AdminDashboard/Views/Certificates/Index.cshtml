@model IEnumerable<Core.Models.Certificate>

@{
    ViewData["Title"] = "Certificates";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-6">Certificates List</h1>
        <a asp-action="Create" class="btn btn-success">Create New Certificate</a>
    </div>

    <table class="table table-bordered table-hover">
        <thead class="table-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.First().Name)</th>
                <th>@Html.DisplayNameFor(model => model.First().IsRequired)</th>
                <th>@Html.DisplayNameFor(model => model.First().IsExpirable)</th>
                <th>@Html.DisplayNameFor(model => model.First().Description)</th>
                <th>@Html.DisplayNameFor(model => model.First().CreatedAt)</th>
                <th>@Html.DisplayNameFor(model => model.First().UpdatedAt)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>
                        @if (item.IsRequired)
                        {
                            <span class="badge bg-success">Required</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Optional</span>
                        }
                    </td>
                    <td>
                        @if (item.IsExpirable)
                        {
                            <span class="badge bg-warning text-dark">Yes</span>
                        }
                        else
                        {
                            <span class="badge bg-info text-dark">No</span>
                        }
                    </td>
                    <td>@item.Description</td>
                    <td>@item.CreatedAt.ToString("yyyy-MM-dd")</td>
                    <td>@item.UpdatedAt?.ToString("yyyy-MM-dd")</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm me-1">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm me-1">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
